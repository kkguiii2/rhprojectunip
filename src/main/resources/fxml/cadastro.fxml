<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shiftly.controller.CadastroController">
   <center>
      <VBox alignment="CENTER" styleClass="login-container">
         <children>
            <VBox alignment="CENTER" styleClass="login-card">
               <children>
                  <!-- Logo e Título -->
                  <VBox alignment="CENTER" spacing="10">
                     <children>
                        <Label styleClass="login-logo" text="Shiftly" />
                        <Label styleClass="login-subtitle" text="Cadastro de Usuário" />
                     </children>
                  </VBox>
                  
                  <!-- Formulário de Cadastro -->
                  <VBox spacing="20" styleClass="form-group">
                     <children>
                        <!-- Tipo de Usuário -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Tipo de Usuário *" />
                              <ComboBox fx:id="tipoUsuarioCombo" promptText="Selecione o tipo de usuário" prefWidth="200" />
                           </children>
                        </VBox>
                        
                        <!-- Nome Completo -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Nome Completo *" />
                              <TextField fx:id="nomeField" promptText="Digite seu nome completo" />
                           </children>
                        </VBox>
                        
                        <!-- Email -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Email *" />
                              <TextField fx:id="emailField" promptText="Digite seu email" />
                           </children>
                        </VBox>
                        
                        <!-- Senha -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Senha *" />
                              <PasswordField fx:id="senhaField" promptText="Digite sua senha" />
                           </children>
                        </VBox>
                        
                        <!-- Confirmar Senha -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Confirmar Senha *" />
                              <PasswordField fx:id="confirmarSenhaField" promptText="Confirme sua senha" />
                           </children>
                        </VBox>
                        
                        <!-- Cargo -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Cargo" />
                              <TextField fx:id="cargoField" promptText="Digite seu cargo" />
                           </children>
                        </VBox>
                        
                        <!-- Departamento -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Departamento" />
                              <TextField fx:id="departamentoField" promptText="Digite seu departamento" />
                           </children>
                        </VBox>
                        
                        <!-- Telefone -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Telefone" />
                              <TextField fx:id="telefoneField" promptText="Digite seu telefone" />
                           </children>
                        </VBox>
                        
                        <!-- CPF -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="CPF" />
                              <TextField fx:id="cpfField" promptText="Digite seu CPF" />
                           </children>
                        </VBox>
                        
                        <!-- Data de Nascimento -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Data de Nascimento" />
                              <DatePicker fx:id="dataNascimentoPicker" promptText="Selecione a data" />
                           </children>
                        </VBox>
                        
                        <!-- Endereço -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="Endereço" />
                              <TextField fx:id="enderecoField" promptText="Digite seu endereço" />
                           </children>
                        </VBox>
                        
                        <!-- CEP -->
                        <VBox spacing="5">
                           <children>
                              <Label styleClass="form-label" text="CEP" />
                              <TextField fx:id="cepField" promptText="Digite seu CEP" />
                           </children>
                        </VBox>
                        
                        <!-- Status/Erro -->
                        <Label fx:id="statusLabel" styleClass="form-error" visible="false" />
                        
                        <!-- Progress Indicator -->
                        <ProgressIndicator fx:id="progressIndicator" maxHeight="30" maxWidth="30" visible="false" />
                        
                        <!-- Botões -->
                        <HBox spacing="15" alignment="CENTER">
                           <children>
                              <Button fx:id="cadastrarButton" onAction="#handleCadastrar" prefWidth="150" styleClass="button,large" text="Cadastrar" />
                              <Button fx:id="voltarButton" onAction="#handleVoltar" prefWidth="150" styleClass="button,secondary" text="Voltar ao Login" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
   
   <!-- Footer -->
   <bottom>
      <HBox alignment="CENTER" spacing="20" styleClass="p-20">
         <children>
            <Hyperlink onAction="#handleAbout" text="Sobre" />
            <Separator orientation="VERTICAL" />
            <Hyperlink onAction="#handleExit" text="Sair" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
